<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <system.web>
    <compilation debug="true" />
  </system.web>
  <!-- Bei der Bereitstellung des Dienstbibliothekprojekts muss der Inhalt der Konfigurationsdatei der app.config-Datei 
  des Hosts hinzugefügt werden. System.Configuration unterstützt keine Konfigurationsdateien für Bibliotheken. -->
  <system.serviceModel>
    <services>
      <service name="ComCon.Shared.Classes.Service1">
        <host>
          <baseAddresses>
            <add baseAddress = "http://localhost:8732/Design_Time_Addresses/ComCon.Shared.Classes/Service1/" />
          </baseAddresses>
        </host>
        <!-- Service Endpoints -->
        <!-- Wenn die Adresse nicht vollqualifiziert ist, ist sie relativ zur oben angegebenen Basisadresse. -->
        <endpoint address ="" binding="wsHttpBinding" contract="ComCon.Shared.Classes.IService1">
          <!-- 
              Bei der Bereitstellung muss das folgende Identitätselement entfernt oder ersetzt werden, um die Identität 
              wiederzugeben, unter der der bereitgestellte Dienst ausgeführt wird. Wenn es entfernt wird, leitet WCF eine geeignete Identität 
              automatisch ab.
          -->
          <identity>
            <dns value="localhost"/>
          </identity>
        </endpoint>
        <!-- Metadata Endpoints -->
        <!-- Der Metadatenaustausch-Endpunkt wird von dem Dienst verwendet, um sich gegenüber Clients selbst zu beschreiben. --> 
        <!-- Dieser Endpunkt verwendet keine sichere Bindung und muss vor der Bereitstellung gesichert oder entfernt werden. -->
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"/>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <!-- Legen Sie den Wert unten auf "false" fest, um die Veröffentlichung 
          von Metadateninformationen zu vermeiden, und entfernen Sie den Metadatenendpunkt oben vor der Bereitstellung. -->
          <serviceMetadata httpGetEnabled="True"/>
          <!-- Damit in Fehlern Ausnahmedetails zum Debuggen angezeigt werden, 
          legen Sie den Wert unten auf "true" fest. Legen Sie ihn vor der Bereitstellung auf "false" fest, 
          um die Veröffentlichung von Ausnahmeinformationen zu vermeiden. -->
          <serviceDebug includeExceptionDetailInFaults="False" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>

</configuration>
